<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MedHomeApp">
        <activity
            android:name=".view.QrActivity"
            android:exported="false"
            android:label="@string/title_activity_qr"
            android:theme="@style/Theme.MedHomeApp" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.BloodDonationActivity"
            android:exported="false"
            android:label="@string/title_activity_blood_donation"
            android:theme="@style/Theme.MedHomeApp" /> <!-- Your Activities -->
        <activity
            android:name=".view.ForgotPasswordActivity"
            android:exported="false"
            android:label="@string/title_activity_forgot_password"
            android:theme="@style/Theme.MedHomeApp" /> <!-- Splash Activity as launcher -->
        <activity
            android:name=".view.SplashActivity"
            android:exported="true"
            android:label="@string/title_activity_splash"
            android:theme="@style/Theme.MedHomeApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Other Activities -->
        <activity
            android:name=".view.HealthRecords"
            android:exported="false"
            android:label="@string/title_activity_health_records"
            android:theme="@style/Theme.MedHomeApp" />
        <activity
            android:name=".view.DashboardActivity"
            android:exported="true"
            android:label="@string/title_activity_dashboard"
            android:theme="@style/Theme.MedHomeApp" /> <!-- Imported Activities -->
        <activity
            android:name=".view.SignupActivity"
            android:exported="false"
            android:label="@string/title_activity_signup"
            android:theme="@style/Theme.MedHomeApp" />
        <activity
            android:name=".view.LoginActivity"
            android:exported="true"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.MedHomeApp">

            <!-- Set LoginActivity as LAUNCHER -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Keep MainActivity but REMOVE launcher to avoid duplicate -->
        <activity
            android:name=".view.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MedHomeApp" />
    </application>

</manifest>