<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MedHomeApp"
        tools:targetApi="31">

        <!-- ✅ SPLASH ACTIVITY (ONLY LAUNCHER) -->
        <activity
            android:name=".view.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.MedHomeApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ✅ LOGIN ACTIVITY -->
        <activity
            android:name=".view.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.MedHomeApp" />

        <!-- ✅ SIGNUP ACTIVITY -->
        <activity
            android:name=".view.SignupActivity"
            android:exported="false"
            android:theme="@style/Theme.MedHomeApp" />

        <!-- ✅ DASHBOARD ACTIVITY -->
        <activity
            android:name=".view.DashboardActivity"
            android:exported="true"
            android:theme="@style/Theme.MedHomeApp" />

        <!-- ✅ FORGOT PASSWORD -->
        <activity
            android:name=".view.ForgotPasswordActivity"
            android:exported="false"
            android:theme="@style/Theme.MedHomeApp" />

        <!-- ✅ HEALTH RECORDS -->
        <activity
            android:name=".view.HealthRecords"
            android:exported="false"
            android:theme="@style/Theme.MedHomeApp" />

        <!-- ✅ BLOOD DONATION -->
        <activity
            android:name=".view.BloodDonationActivity"
            android:exported="false"
            android:theme="@style/Theme.MedHomeApp" />

        <!-- (Optional) MAIN ACTIVITY IF USED -->
        <activity
            android:name=".view.MainActivity"
            android:exported="false"
            android:theme="@style/Theme.MedHomeApp" />

    </application>

</manifest>
